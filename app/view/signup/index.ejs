<div class="container">
<div class="col-sm-8 col-sm-offset-2">
	<div class="panel panel-primary" >
	<div class="panel-heading" ><h2>Signup</h2></div>
	<div class="panel-body" >
<form class="form-horizontal" action="/signup" method="post">
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Full Name</label>
		</div>
		<div class="col-sm-8">
			<input type="text" name="fullname" placeholder="Full name" class="form-control">
			
		</div>

	</div>
	
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Mobile number</label>
		</div>
		<div class="col-sm-8">
			<input type="text" name="mobilenumber" placeholder="Mobile no." class="form-control">
			
		</div>

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label"> User Name </label>
		</div>
		<div class="col-sm-8">
			<input type="text" name="username" placeholder="user name" class="form-control">
			
		</div>

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Password</label>
		</div>
		<div class="col-sm-8">
			<input type="password" name="password" placeholder="password" class="form-control">
			
			
		</div>


	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Confirm Password</label>
		</div>
		<div class="col-sm-8">
			<input type="Password" name="confirmpassword" placeholder="Confirm password" class="form-control">
			
			
		</div>
		

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Address</label>
		</div>
		<div class="col-sm-8">
			<textarea placeholder="Address" name="address" class="form-control">Address</textarea>
			
			
		</div>
		

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">DOB</label>
		</div>
		<div class="col-sm-8">
			<input type="date" name="dob" placeholder="DOB" class="form-control">
			
		</div>

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">Gender</label>
		</div>
		<div class="col-sm-8">
			<input type="radio" name="gender" value="male" checked> Male
  <input type="radio" name="gender" value="female"> Female
			
			
		</div>
		

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">State</label>
		</div>
		<div class="col-sm-8">
			
<select class="form-control" name="state">
  <option >Select State</option>
  <option >Mp</option>
  <option >Maharashtra</option>
  <option >Rajsthan</option>
  <option >Gujrat</option>
  <option >Chenai</option>
</select>
			
		</div>
		

	</div>
	<div class="form-group">
	
		<div class="col-sm-4">
			<label class="control=label">City</label>
		</div>
		<div class="col-sm-8">
			
<select class="form-control" name="city">
  <option >Select City</option>
  <option >Indore</option>
  <option >Bhopal</option>
  <option >Ujjain</option>
  <option >khandwa</option>
  <option >dewas</option>
</select>
			
		</div>
		

	</div>
	
	<button class="btn btn-info  btn-block" type="submit" > Sign In</button>
	
	</div>
	</form>
	
	</div>
	</div>
</div>
